                        android:textSize="@dimen/font_14"
                        android:background="@color/red_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/title_item_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14"
                    android:padding="3dip"
                    android:text="标题" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_five"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_item_five"
                        android:layout_width="100dip"
                        android:layout_height="150dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/splash" />
                    <TextView
                        android:id="@+id/tv_five"
                        android:padding="2dip"
                        android:textColor="@color/white"
                        android:text="会员"
                        android:textSize="@dimen/font_14"
                        android:background="@color/red_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/title_item_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:padding="3dip"
                    android:textSize="@dimen/font_14"
                    android:text="标题" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_six"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_item_six"
                        android:layout_width="100dip"
                        android:layout_height="150dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/splash" />
                    <TextView
                        android:id="@+id/tv_six"
                        android:padding="2dip"
                        android:textColor="@color/white"
                        android:text="会员"
                        android:textSize="@dimen/font_14"
                        android:background="@color/red_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/title_item_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:padding="3dip"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14"
                    android:text="标题" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
     <View
         android:background="@color/grey_33"
         android:layout_width="match_parent"
         android:layout_height="0.5dip"/>
    <LinearLayout
        android:id="@+id/mour"
        android:orientation="vertical"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="@color/red_3"
            android:text="查看更多"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>