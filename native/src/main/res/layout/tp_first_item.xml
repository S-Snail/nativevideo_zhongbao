<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:orientation="horizontal">

        <View
            android:layout_gravity="center_vertical"
            android:layout_width="5dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:background="@color/red" />

        <TextView
            android:id="@+id/tp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="每日电影推荐"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layout_one"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_item_one"
                        android:layout_width="100dip"
                        android:layout_height="150dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/splash" />
                    <TextView
                        android:id="@+id/tv_one"
                        android:padding="2dip"
                        android:textColor="@color/white"
                        android:text="会员"
                        android:textSize="@dimen/font_14"
                        android:background="@color/red_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/title_item_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14"
                    android:padding="3dip"
                    android:text="标题" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_two"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_item_two"
                        android:layout_width="100dip"
                        android:layout_height="150dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/splash" />
                    <TextView
                        android:id="@+id/tv_two"
                        android:padding="2dip"
                        android:textColor="@color/white"
                        android:text="会员"
                        android:textSize="@dimen/font_14"
                        android:background="@color/red_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/title_item_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/font_14"
                    android:padding="3dip"
                    android:text="标题" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_three"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_item_three"
                        android:layout_width="100dip"
                        android:layout_height="150dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/splash" />
                    <TextView
                        android:id="@+id/tv_three"
                        android:padding="2dip"
                        android:textColor="@color/white"
                        android:text="会员"
                        android:textSize="@dimen/font_14"
                        android:background="@color/red_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/title_item_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:textSize="@dimen/font_14"
                    android:padding="3dip"
                    android:singleLine="true"
                    android:text="标题" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layout_four"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_item_four"
                        android:layout_width="100dip"
                        android:layout_height="150dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/splash" />
                    <TextView
                        android:id="@+id/tv_four"
                        android:padding="2dip"
                        android:textColor="@color/white"
